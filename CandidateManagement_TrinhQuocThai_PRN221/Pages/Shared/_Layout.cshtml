<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CandidateManagement_TrinhQuocThai_PRN221</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CandidateManagement_TrinhQuocThai_PRN221.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CandidateManagement_TrinhQuocThai_PRN221</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Job Posting Button -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/JobPostingPage/index">Job Posting</a>
                        </li>
                        <!-- Candidate Profile Button -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/CandidateProfilePage/index">Candidate Profile</a>
                        </li>
                        <!-- Sign Out Button -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-page-handler="Logout" asp-page="/Login/LoginPage">Log out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-muted">
        <div class="container text-center">
            &copy; 2024 - CandidateManagement_TrinhQuocThai_PRN221 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
