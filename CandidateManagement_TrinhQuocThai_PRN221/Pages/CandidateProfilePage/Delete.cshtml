@page
@model CandidateManagement_TrinhQuocThai_PRN221.Pages.CandidateProfilePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .btn-danger {
        margin-right: 10px; /* Add space between buttons */
    }
</style>

<div class="container">
    <h1 class="text-danger text-center">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <h4 class="text-center">Candidate Profile</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CandidateProfile.Fullname)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Fullname)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CandidateProfile.Birthday)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Birthday)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CandidateProfile.Posting)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Posting.PostingId)</dd>
            </dl>

            <form method="post" class="text-center">
                <input type="hidden" asp-for="CandidateProfile.CandidateId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
