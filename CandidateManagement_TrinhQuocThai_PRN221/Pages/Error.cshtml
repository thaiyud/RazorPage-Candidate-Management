@page
@model ErrorModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
}

<div class="container text-center mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body p-5">
            <h1 class="display-4 text-danger">Oops!</h1>
            <h3 class="text-dark mb-4">Your access is denied.</h3>



            <a href="/" class="btn btn-primary btn-lg mt-3">Back</a>

            <hr class="my-4">

            <h5 class="text-muted">For Developers:</h5>
            <p class="text-muted">
                To see detailed error information, switch to the <strong>Development</strong> environment by setting the
                <strong>ASPNETCORE_ENVIRONMENT</strong> variable to <strong>Development</strong> and restarting the app.
                Remember not to enable this in a live environment.
            </p>
        </div>
    </div>
</div>
