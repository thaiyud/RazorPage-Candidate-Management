@page
@model CandidateManagement_TrinhQuocThai_PRN221.Pages.JobPostingPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .btn-danger {
        margin-right: 10px; /* Add space between buttons */
    }

    .text-danger {
        color: #dc3545; /* Bootstrap danger color */
    }
</style>

<div class="container">
    <h1 class="text-danger text-center">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <h4 class="text-center">Job Posting</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.JobPostingTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.JobPostingTitle)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.PostedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.PostedDate)</dd>
            </dl>

            <form method="post" class="text-center">
                <input type="hidden" asp-for="JobPosting.PostingId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
