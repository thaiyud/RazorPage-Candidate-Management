@page
@model CandidateManagement_TrinhQuocThai_PRN221.Pages.JobPostingPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .btn-link {
        margin-right: 10px; /* Add space between links */
    }
</style>

<div class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="text-center">Job Posting</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.JobPostingTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.JobPostingTitle)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobPosting.PostedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobPosting.PostedDate)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        <a asp-page="./Edit" asp-route-id="@Model.JobPosting?.PostingId" class="btn btn-warning mx-1">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
