@page
@model CandidateManagement_TrinhQuocThai_PRN221.Pages.JobPostingPage.IndexModel

@{
    ViewData["Title"] = "Job Postings";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.JobPosting[0].JobPostingTitle)</th>
                <th>@Html.DisplayNameFor(model => model.JobPosting[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.JobPosting[0].PostedDate)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.JobPosting)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.JobPostingTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.PostedDate)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.PostingId" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.PostingId" class="btn btn-info btn-sm mx-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.PostingId" class="btn btn-danger btn-sm mx-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
