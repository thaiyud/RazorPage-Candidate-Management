@page
@model CandidateManagement_TrinhQuocThai_PRN221.Pages.JobPostingPage.CreateModel

@{
    ViewData["Title"] = "Create Job Posting";
}

<style>
    .form-control {
        height: 40px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .card {
        border-radius: 10px;
        max-width: 600px; /* Set a maximum width for the card */
        width: 100%; /* Full width for the card */
    }

    .card-header {
        background-color: #f8f9fa;
        color: #333;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    .form-group label {
        font-size: 0.9rem;
    }

    .form-group input, .form-group select, .form-group textarea {
        font-size: 0.9rem;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
    }

        .button-group .btn {
            flex: 1;
            margin-right: 10px;
        }

            .button-group .btn:last-child {
                margin-right: 0;
            }
</style>

<div class="container mt-4">
    <h1 class="text-center mb-4 text-info">@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="JobPosting.PostingId" class="control-label"></label>
                            <input asp-for="JobPosting.PostingId" class="form-control" />
                            <span asp-validation-for="JobPosting.PostingId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobPosting.JobPostingTitle" class="control-label"></label>
                            <input asp-for="JobPosting.JobPostingTitle" class="form-control" />
                            <span asp-validation-for="JobPosting.JobPostingTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobPosting.Description" class="control-label"></label>
                            <textarea asp-for="JobPosting.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="JobPosting.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobPosting.PostedDate" class="control-label"></label>
                            <input asp-for="JobPosting.PostedDate" class="form-control" type="date" />
                            <span asp-validation-for="JobPosting.PostedDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4 button-group">
                            <button type="submit" class="btn btn-primary">Create Job Posting</button>
                            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
